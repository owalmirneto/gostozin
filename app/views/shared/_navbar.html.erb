<!-- Navbar
================================================== -->
<div class="container navbar-wrapper clear">
  <div class="navbar navbar-">
    <div class="navbar-inner">
      <%= image_tag "/images/gostozin-32.png", :style => "margin:6px auto auto 10px;width:28px;float:right;" %>
      <% if user_signed_in? %>
        <%= image_gravatar(current_user.email, 28, :style => "margin:6px auto auto 10px;width:28px;float:right;") %>
      <% end %>
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".menu-gostozin" style="margin:6px auto auto 10px;">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="nav-collapse collapse menu-gostozin">
        <ul class="nav">
          <% if user_signed_in? %>
            <li><%= link_to "Home", "/" %></li>
            <li class="dropdown" id="nav-profile">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#nav-profile">
                Perfil <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Meus Links", "/u/#{current_user.username}" %></li>
                <li><%= link_to "Meus Dados", "/u/#{current_user.username}/edit" %></li>
                <li class="divider"></li>
                <li><%= link_to "Sair", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
            <li><%= link_to "Adicionar link", "#modal_new_link", :"data-toggle" => "modal" %></li>
          <% else %>
            <li><%= link_to "Entrar", new_user_session_path %></li>
            <li><%= link_to "Cadastre-se", new_user_registration_path %></li>
          <% end %>
          <li>
            <%= form_tag links_path, :method => :get, :class => "navbar-search pull-left" do %>
              <%= text_field_tag :search, @search, :placeholder => "Procurando algo?", :class => "search-query span3" %>
            <% end %>
          </li> 
        </ul>
      </div>
    </div><!-- /.navbar-inner -->
  </div><!-- /.navbar -->
</div>