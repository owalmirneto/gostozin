<div class="show-grid">
  <div class="span9">
    <h2>Meus links</h2>
    <div id="links">
      <%= render "links/list", links: @links %>  
    </div>

    <br clear="all" />
    <%= will_paginate @links %>
  </div>

  <div class="span2">
    <%= image_gravatar(current_user.email, 150) %>
    <h3> @<%= @user.username %> </h3>
    <div id="user_data">
      <p>desde: <%= l @user.created_at, format: :mini_short %></p>
      <p><%= link_to @user.url, @user.url, target: "_blank" if @user.url.present? %></p>
      <% if @user.bio.present? %>
        <p><b>Sobre min</b>: <%= @user.bio %></p>
      <% end %>
      <!--
      <p>RSS: <%= link_to "público", "#" %> | <%= link_to "privado", "#" %> </p>
      <p>Follow <%= link_to "0 Usuários", "#" %></p>
      <p>Followed by <%= link_to "0 Usuários", "#" %></p>
      -->
      <hr />

      <ul id="counters">
        <!-- <li><%= link_to "1 baú(s)", "#" %></li> -->
        <li><%= link_to "#{@user.links.count} link(s)",  %></li>
      </ul>
    </div>

    <hr />

    <div class="user_tags">
      <h4>Tags</h4>
      <% @links.each do |link| %>
        <% link.tags.each do |tag| %>
          <!-- <span class="label label-info"></span> -->
            <%#= link_to tag.name,  %>
          <%= link_to_unless_current tag.name, links_path(:tag => tag.name), :style => "margin:0 3px 3px 0", :class => "btn btn-mini btn-primary" %>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
