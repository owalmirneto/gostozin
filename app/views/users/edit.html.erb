<%= javascript_include_tag "/scripts/modules/users" %>

<%= render "shared/masthead", 
  :subnav => [
    {:title => "Meus dados", :href => "/u/#{current_user.username}/edit", :current => "active"},
    {:title => "Minha senha", :href => "/users/edit"},
    {:title => "Meu avatar", :href => "/u/#{current_user.username}/avatar"}
  ], 
  :h1 => [{:title =>"Meus dados"}]
%>

<section class="content">
  <div id="div-forms-large" class="row">
    <div class="span5">
      <%= form_for @user,  :html => { :id => "edit_user" }, url: "/u/#{current_user.username}/update_data" do |f| %>
        <%= render "shared/flash_messages", resources: @user %>
        <div class="input">
          <%= f.label :username, :style => "display:none" %>
          <%= f.text_field :username %>
        </div>

        <div class="input"> 
          <%= f.label :email, :style => "display:none" %>
          <%= f.text_field :email %>
        </div>

        <div class="input"> 
          <%= f.label :url, :style => "display:none" %>
          <%= f.text_field :url, placeholder: "http://meusite.com.br" %>
        </div>


        <div class="input"> 
          <%= f.label :bio, :style => "display:none" %>
          <%= f.text_area :bio, placeholder: "Digite algo sobre você...", :class => "textarea width-400" %>
        </div>

        <div class="actions">
          <%= f.submit :class => "btn btn-primary btn-large" %>
        </div>
      <% end %>

      <%= link_to 'Ver meus links', links_path, :class => "btn btn-mini" %>
    </div>

    <div class="span6">
      <h3>Observações</h3>
      <p>
        Aqui você pode alterar todos os seus dados, tais como 
        <span class="label label-info">Nome de usuário</span>, 
        <span class="label label-info">Email</span>, 
        <span class="label label-info">Link pessoal</span> e 
        <span class="label label-info">Biografia</span>, 
        sendo que <span class="label label-warning">Nome de usuário</span> e 
        <span class="label label-warning">Email</span> são obrigatórios</p>.
    </div>
  </div>
</section>
  