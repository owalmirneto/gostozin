<section class="content">
  <div id="div-forms-large" class="width-300">
    <%= form_for(resource, :as => resource_name, :html => { :id => "login" }, :url => session_path(resource_name)) do |f| %>
      <div class="input">
        <%= f.label :email, :style => "display:none" %>
        <%= f.email_field :email, placeholder: "E-mail", :class => "text-field" %>
      </div>
      <div class="input">
        <%= f.label :password, :style => "display:none" %>
        <%= f.password_field :password, placeholder: "Senha", :class => "text-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Acessar contar", :class => "btn btn-large btn-primary" %>
      </div>
    <% end %>

    ou <%= link_to "cadastre-se", new_user_registration_path %> e junte-se ao <%= link_to "@Gostozinho", "/" %>
  </div>
</section>
