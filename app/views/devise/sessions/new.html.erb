<div class="login">
  <h2>Autenticação</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="input"><%= f.email_field :email, placeholder: "E-mail" %></div>
    <div class="input"><%= f.password_field :password, placeholder: "Senha" %></div>

    <div class="actions">
      <%= f.submit "Acessar contar", :disable_with => "Aguarde...", :class => "btn btn-large btn-primary" %>
    </div>
  <% end %>

<%= render "links" %>
</div>