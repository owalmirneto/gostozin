<div class="span9">
  <h1>Meus links</h1>

  <div id="links">
  <% @links.each do |link| %>
    <div class="link">
      <div class="date"><%= l link.created_at, format: :full %></div>
      <h3 class="title"><%= link.title %></h3>
      <div class="url"><%= link_to link.url, link.url %> <%= link_to "", link.url, :class => "icon-share", target: "_blank"  %></div>
      <div class="descriptions"><%= link.description %></div>
      <div class="tags">
        <% tags = link.tags.split "," %>
        <% tags.each do |tag| %>
          <span class="label label-info"><%= tag %></span>
        <% end %>
      </div>
      <p class="time_ago"><i><small>há <%= time_ago_in_words(link.created_at) %> atrás</small></i></p>
      <% if user_signed_in? %>
        <p class="actions">
          <%= link_to "", edit_link_path(link), :class => "icon-pencil" %>
          <%= link_to "", link, :class => "icon-remove", confirm: "Are you sure?", method: :delete %>
        </p>
      <% end %>
    </div>
    <hr />
  <% end %>
  </div>
</div>
<div class="span2">
  <%= image_tag "/images/avatar-128.png" %> 
</div>