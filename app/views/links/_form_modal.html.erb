<%= form_for @link_for_form do |f| %>
  <div id="modal_new_link" class="modal hide fade" style="display: none;">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :is_public, value: "t" %>
      
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">×</button>
      <h3>Adicionar link</h3>
    </div>
    <div class="modal-body">
      <div class="input">
        <%= f.text_field :title, placeholder: "Título do link", :class => "input-xxlarge bold" %>
      </div>
      
      <div class="input"> 
        <%= f.text_field :url, placeholder: "http://seulink.com.br" %>
      </div>
    </div>
    <div class="modal-footer">
      <%= link_to "Cancelar", "#", :"data-dismiss" => "modal" %>
      <%= f.submit :disable_with => "Aguarde...", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
